{
  "name": "directus-extensions-installer",
  "version": "1.0.0",
  "description": "Application to be used in conjunction with its matching Docker image as an init container to retrieve and prepare Directus extensions",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --config nodemon.json src/index.ts",
    "build": "browserify --node src/index.ts -p [ tsify --noImplicitAny] > dist/bundle.js && tar -czvf dist/bundle.tar.gz dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/V1210N/directus-extensions-installer.git"
  },
  "keywords": [
    "directus",
    "extensions",
    "installer"
  ],
  "author": "Alex Ferreira",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/V1210N/directus-extensions-installer/issues"
  },
  "homepage": "https://github.com/V1210N/directus-extensions-installer#readme",
  "devDependencies": {
    "@types/yamljs": "^0.2.31",
    "@types/yauzl": "^2.9.2",
    "browserify": "^17.0.0",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "tsify": "^5.0.4",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@types/follow-redirects": "^1.13.1",
    "follow-redirects": "^1.14.4",
    "yamljs": "^0.3.0",
    "yauzl": "^2.10.0"
  }
}
